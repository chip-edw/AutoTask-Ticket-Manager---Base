{
  "Instance": "https://login.microsoftonline.com/{0}",
  "ApiUrl": "https://graph.microsoft.com/",
  "ManagementApiPort": 60050,
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=ATTMS.db"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "AutoTaskTicketManager_Base.MSAL": "Warning",
        "AutoTaskTicketManager_Base.HTTP": "Warning",
        "AutoTaskTicketManager_Base.Worker": "Information",
        "AutoTaskTicketManager_Base.EmailManager": "Warning",
        "AutoTaskTicketManager_Base.LoggingHandler": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] ({SourceContext}) {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/application-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] ({SourceContext}) {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithThreadId",
      "WithMachineName"
    ],
    "Properties": {
      "Application": "AutoTaskTicketManager"
    }
  },
  "LoggingSettings": {
    "EnableMSALLogging": true,
    "EnableHTTPLogging": true
  }
}
